<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status_background"
        android:ellipsize="none"
        android:gravity="center"
        android:minHeight="24dp"
        android:padding="4dp"
        android:singleLine="true"
        android:text="IP: Buscando..."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="165px"
        android:layout_height="120px"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatus">

        <LinearLayout
            android:layout_width="128px"
            android:layout_height="32px"
            android:background="#000000"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="128px"
                android:layout_height="32px"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/periodo_digit1"
                    android:layout_width="18px"
                    android:layout_height="32px"
                    android:background="@drawable/digit_background"
                    android:fontFamily="@font/inkythinpixels"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/periodo_digit2"
                    android:layout_width="18px"
                    android:layout_height="32px"
                    android:background="@drawable/digit_background"
                    android:fontFamily="@font/inkythinpixels"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="24px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="128px"
            android:layout_height="64px"
            android:background="#000000"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/hora_digit1"
                    android:layout_width="29px"
                    android:layout_height="64px"
                    android:background="@drawable/digit_background"
                    android:fontFamily="@font/inkythinpixels"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <TextView
                    android:id="@+id/hora_digit2"
                    android:layout_width="29px"
                    android:layout_height="64px"
                    android:background="@drawable/digit_background"
                    android:fontFamily="@font/inkythinpixels"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <TextView
                    android:layout_width="12px"
                    android:layout_height="24dp"
                    android:fontFamily="@font/inkythinpixels"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <TextView
                    android:id="@+id/minuto_digit1"
                    android:layout_width="29px"
                    android:layout_height="64px"
                    android:background="@drawable/digit_background"
                    android:fontFamily="@font/inkythinpixels"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <TextView
                    android:id="@+id/minuto_digit2"
                    android:layout_width="29px"
                    android:layout_height="64px"
                    android:background="@drawable/digit_background"
                    android:fontFamily="@font/inkythinpixels"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
