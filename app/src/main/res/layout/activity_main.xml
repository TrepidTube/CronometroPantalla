<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:ellipsize="none"
        android:gravity="center"
        android:id="@+id/tvStatus"
        android:background="@color/status_background"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="24dp"
        android:text="IP: Buscando..."
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatus">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp">
            <TextView
                android:textSize="12sp"
                android:textColor="#1a1a1a"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="14dp"
                android:text="Periodo"
                android:fontFamily="sans-serif-medium"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="36sp"
                    android:textColor="#1a1a1a"
                    android:gravity="center"
                    android:id="@+id/periodo_digit1"
                    android:background="@drawable/digit_background"
                    android:layout_width="40dp"
                    android:layout_height="56dp"
                    android:text="0"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="3dp"/>
                <TextView
                    android:textSize="36sp"
                    android:textColor="#1a1a1a"
                    android:gravity="center"
                    android:id="@+id/periodo_digit2"
                    android:background="@drawable/digit_background"
                    android:layout_width="40dp"
                    android:layout_height="56dp"
                    android:text="0"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="#1a1a1a"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="14dp"
                android:text="Reloj"
                android:fontFamily="sans-serif-medium"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="36sp"
                    android:textColor="#1a1a1a"
                    android:gravity="center"
                    android:id="@+id/hora_digit1"
                    android:background="@drawable/digit_background"
                    android:layout_width="40dp"
                    android:layout_height="56dp"
                    android:text="0"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="3dp"/>
                <TextView
                    android:textSize="36sp"
                    android:textColor="#1a1a1a"
                    android:gravity="center"
                    android:id="@+id/hora_digit2"
                    android:background="@drawable/digit_background"
                    android:layout_width="40dp"
                    android:layout_height="56dp"
                    android:text="0"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:textSize="36sp"
                    android:textColor="#1a1a1a"
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="56dp"
                    android:text=":"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:textSize="36sp"
                    android:textColor="#1a1a1a"
                    android:gravity="center"
                    android:id="@+id/minuto_digit1"
                    android:background="@drawable/digit_background"
                    android:layout_width="40dp"
                    android:layout_height="56dp"
                    android:text="0"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="3dp"/>
                <TextView
                    android:textSize="36sp"
                    android:textColor="#1a1a1a"
                    android:gravity="center"
                    android:id="@+id/minuto_digit2"
                    android:background="@drawable/digit_background"
                    android:layout_width="40dp"
                    android:layout_height="56dp"
                    android:text="0"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
